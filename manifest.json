{
  "manifest_version": 3,
  "name": "CodeMentor AI - Your DSA Learning Companion",
  "version": "2.0.0",
  "description": "AI-powered DSA mentor: hint ladder, stuck detector, approach comparator, and more â€” without spoiling solutions",

  "icons": {
    "16": "assets/logo-16.png",
    "32": "assets/logo-32.png",
    "48": "assets/logo-48.png",
    "128": "assets/logo-128.png"
  },

  "permissions": ["storage", "activeTab", "clipboardWrite"],

  "host_permissions": [
    "https://leetcode.com/*",
    "https://codeforces.com/*",
    "https://www.hackerrank.com/*",
    "https://www.codechef.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "https://leetcode.com/*",
        "https://codeforces.com/*",
        "https://www.hackerrank.com/*",
        "https://www.codechef.com/*"
      ],
      "js": [
        "platforms/leetcode.js",
        "platforms/codeforces.js",
        "platforms/hackerrank.js",
        "platforms/codechef.js",
        "platforms/loader.js",
        "utils/storage.js",
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["sidebar.html", "sidebar.js", "assets/*", "styles/*"],
      "matches": ["<all_urls>"]
    }
  ],

  "action": {
    "default_title": "CodeMentor AI",
    "default_icon": {
      "16": "assets/logo-16.png",
      "32": "assets/logo-32.png",
      "48": "assets/logo-48.png",
      "128": "assets/logo-128.png"
    }
  }
}
